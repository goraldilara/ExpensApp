
@{
    Layout = null;
}
@model CommonArea.MultipleModel2
<!DOCTYPE html>

<html>
<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Content/css/GridSheetforFillExpenseFormPage.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>ApprovingExpenseFormPage</title>
    <script>
        $(document).ready(function() {
            $(document).on("click", "#formTable tbody tr", function() {
                alert(this.id);
    });
});
    </script>
</head>
<body>
    <div>
        <h1 align="center">ÖDEME BEKLEYEN MASRAFLAR</h1>
    </div>

    <div class="container">
        <div class="row col-md-6 col-md-offset-2 custyle">
            <table class="table table-striped custab" id="formTable">
                <tr>
                    <th>Form Tarihi</th>
                    <th>Çalışan Ad Soyad</th>
                    <th>Toplam Masraf Tutarı</th>
                </tr>
                @{
                    int counter = 0;
                    foreach (var item in Model.listForForms)
                    {
                        var item2 = Model.listForEmployees[counter];

                        <tr id="@item.FormID">
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                            <td>@item2.Name @item2.Surname</td>
                            <td>@item.TotalAmount</td>
                        </tr>

                    }
                }
            </table>
        </div>
    </div>

</body>

</html>
